# Security Environment Variables

# OWASP Security Configuration
OWASP_SECURITY_ENABLED=true
OWASP_VIOLATION_THRESHOLD=10
OWASP_BLOCK_THRESHOLD=5

# Security Headers Configuration
CSP_ENABLED=true
CSP_REPORT_URI=/api/security/csp-report
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
FRAME_OPTIONS=DENY
REFERRER_POLICY=strict-origin-when-cross-origin

# Content Security Policy Directives
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com
CSP_STYLE_SRC='self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net
CSP_IMG_SRC='self' data: https: blob:
CSP_FONT_SRC='self' https://fonts.gstatic.com data:
CSP_CONNECT_SRC='self' https://api.aquafarm.cloud wss://api.aquafarm.cloud
CSP_MEDIA_SRC='self' data: blob:
CSP_OBJECT_SRC='none'
CSP_BASE_URI='self'
CSP_FORM_ACTION='self'
CSP_FRAME_ANCESTORS='none'
CSP_MANIFEST_SRC='self'
CSP_WORKER_SRC='self' blob:

# Permissions Policy
PERMISSIONS_POLICY_ENABLED=true
PERMISSIONS_POLICY_GEOLOCATION=
PERMISSIONS_POLICY_MICROPHONE=
PERMISSIONS_POLICY_CAMERA=
PERMISSIONS_POLICY_PAYMENT=
PERMISSIONS_POLICY_USB=
PERMISSIONS_POLICY_MAGNETOMETER=
PERMISSIONS_POLICY_GYROSCOPE=
PERMISSIONS_POLICY_SPEAKER=
PERMISSIONS_POLICY_VIBRATE=
PERMISSIONS_POLICY_FULLSCREEN='self'
PERMISSIONS_POLICY_SYNC_XHR='self'

# Cross-Origin Policies
CROSS_ORIGIN_EMBEDDER_POLICY=true
CROSS_ORIGIN_OPENER_POLICY=same-origin
CROSS_ORIGIN_RESOURCE_POLICY=same-origin

# Input Sanitization
INPUT_SANITIZATION_ENABLED=true
INPUT_SANITIZATION_STRIP_HTML=true
INPUT_SANITIZATION_ESCAPE_HTML=true
INPUT_SANITIZATION_NORMALIZE_WHITESPACE=true
INPUT_SANITIZATION_REMOVE_NULL_BYTES=true
INPUT_SANITIZATION_MAX_LENGTH=10000

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
SECURITY_MONITORING_MAX_EVENTS=10000
SECURITY_MONITORING_MAX_ALERTS=1000
SECURITY_MONITORING_BRUTE_FORCE_THRESHOLD=5
SECURITY_MONITORING_SUSPICIOUS_THRESHOLD=20
SECURITY_MONITORING_BLOCK_THRESHOLD=10

# IP Blocking
IP_BLOCKING_ENABLED=true
IP_BLOCKING_DURATION=3600
IP_BLOCKING_WHITELIST=127.0.0.1,::1
IP_BLOCKING_BLACKLIST=

# File Upload Security
FILE_UPLOAD_SECURITY_ENABLED=true
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
FILE_UPLOAD_SCAN_VIRUS=true
FILE_UPLOAD_QUARANTINE_DIR=/tmp/quarantine

# CSRF Protection
CSRF_PROTECTION_ENABLED=true
CSRF_TOKEN_SECRET=YOUR_CSRF_TOKEN_SECRET
CSRF_TOKEN_EXPIRES_IN=3600

# Session Security
SESSION_SECURITY_ENABLED=true
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
SESSION_MAX_AGE=3600
SESSION_ROLLING=true

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_HISTORY_COUNT=5
PASSWORD_EXPIRES_DAYS=90

# Account Lockout
ACCOUNT_LOCKOUT_ENABLED=true
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=900
ACCOUNT_LOCKOUT_WINDOW=900

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=AquaFarm Pro
TWO_FACTOR_ALGORITHM=SHA1
TWO_FACTOR_DIGITS=6
TWO_FACTOR_PERIOD=30

# API Security
API_SECURITY_ENABLED=true
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=900
API_RATE_LIMIT_MAX=100
API_KEY_REQUIRED=true
API_VERSION_HEADER=X-API-Version

# Database Security
DB_SECURITY_ENABLED=true
DB_ENCRYPTION_ENABLED=true
DB_AUDIT_LOGGING=true
DB_QUERY_LOGGING=false
DB_CONNECTION_ENCRYPTION=true

# Network Security
NETWORK_SECURITY_ENABLED=true
NETWORK_FIREWALL_ENABLED=true
NETWORK_IDS_ENABLED=true
NETWORK_PROXY_ENABLED=true
NETWORK_SSL_ENABLED=true

# Logging Security
SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_LEVEL=warn
SECURITY_LOG_FORMAT=json
SECURITY_LOG_RETENTION_DAYS=90
SECURITY_LOG_COMPRESSION=true

# Incident Response
INCIDENT_RESPONSE_ENABLED=true
INCIDENT_RESPONSE_EMAIL=security@aquafarm.cloud
INCIDENT_RESPONSE_PHONE=+1234567890
INCIDENT_RESPONSE_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx
INCIDENT_RESPONSE_AUTO_BLOCK=true

# Security Testing
SECURITY_TESTING_ENABLED=true
SECURITY_TESTING_SAST_ENABLED=true
SECURITY_TESTING_DAST_ENABLED=true
SECURITY_TESTING_DEPENDENCY_CHECK=true
SECURITY_TESTING_LICENSE_CHECK=true

# Compliance
COMPLIANCE_GDPR_ENABLED=true
COMPLIANCE_SOX_ENABLED=true
COMPLIANCE_PCI_ENABLED=true
COMPLIANCE_HIPAA_ENABLED=false
COMPLIANCE_AUDIT_LOGGING=true