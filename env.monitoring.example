# Monitoring Environment Variables

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_RETRIES=3

# Advanced Logging
LOGGING_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=7
LOG_MAX_HISTORY=50000
LOG_COMPRESSION=true
LOG_ROTATION=true
LOG_ROTATION_SIZE=100MB
LOG_ROTATION_MAX_FILES=10

# Metrics
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60000
METRICS_RETENTION_PERIOD=7
METRICS_EXPORT_FORMAT=prometheus
METRICS_PROMETHEUS_ENABLED=true
METRICS_PROMETHEUS_PORT=9090
METRICS_PROMETHEUS_PATH=/metrics

# Alerting
ALERTING_ENABLED=true
ALERT_EVALUATION_INTERVAL=60
ALERT_NOTIFICATION_COOLDOWN=300
ALERT_RETENTION_DAYS=30

# Email Notifications
ALERT_EMAIL=alerts@aquafarm.cloud
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=alerts@aquafarm.cloud
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=false
SMTP_FROM=alerts@aquafarm.cloud

# Slack Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/xxx
SLACK_CHANNEL=#alerts
SLACK_USERNAME=AquaFarm Bot
SLACK_ICON_EMOJI=:warning:

# Webhook Notifications
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRIES=3

# SMS Notifications
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890
SMS_ALERT_NUMBERS=+1234567890,+0987654321

# Push Notifications
PUSH_PROVIDER=firebase
PUSH_SERVER_KEY=your_firebase_server_key
PUSH_DEVICE_TOKENS=device_token_1,device_token_2

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLING_RATE=1.0
PERFORMANCE_TRACE_ENABLED=true
PERFORMANCE_TRACE_SAMPLE_RATE=0.1

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_SAMPLE_RATE=1.0
ERROR_TRACKING_MAX_STACK_DEPTH=50
ERROR_TRACKING_IGNORE_PATTERNS=node_modules,test

# Business Intelligence
BI_ENABLED=true
BI_COLLECTION_INTERVAL=300000
BI_RETENTION_DAYS=365
BI_AGGREGATION_ENABLED=true
BI_REAL_TIME_ENABLED=true

# Real-time Dashboards
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3001
DASHBOARD_AUTH_ENABLED=true
DASHBOARD_AUTH_SECRET=your_dashboard_auth_secret
DASHBOARD_REFRESH_INTERVAL=5000

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true
AUDIT_LOG_COMPRESSION=true

# System Monitoring
SYSTEM_MONITORING_ENABLED=true
SYSTEM_CPU_THRESHOLD=80
SYSTEM_MEMORY_THRESHOLD=80
SYSTEM_DISK_THRESHOLD=90
SYSTEM_NETWORK_THRESHOLD=1000

# Network Monitoring
NETWORK_MONITORING_ENABLED=true
NETWORK_PACKET_CAPTURE=false
NETWORK_BANDWIDTH_THRESHOLD=1000
NETWORK_LATENCY_THRESHOLD=100
NETWORK_ERROR_THRESHOLD=5

# User Activity Monitoring
USER_ACTIVITY_MONITORING_ENABLED=true
USER_ACTIVITY_RETENTION_DAYS=90
USER_ACTIVITY_ANONYMIZE=true
USER_ACTIVITY_GDPR_COMPLIANT=true

# Compliance Monitoring
COMPLIANCE_MONITORING_ENABLED=true
COMPLIANCE_GDPR_ENABLED=true
COMPLIANCE_SOX_ENABLED=true
COMPLIANCE_PCI_ENABLED=true
COMPLIANCE_HIPAA_ENABLED=false
COMPLIANCE_AUDIT_TRAIL=true

# Distributed Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
TRACING_JAEGER_ENABLED=true
TRACING_JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_JAEGER_SERVICE_NAME=aquafarm-pro
TRACING_JAEGER_AGENT_HOST=localhost
TRACING_JAEGER_AGENT_PORT=6832

# APM Integration
APM_ENABLED=true
APM_PROVIDER=newrelic
APM_LICENSE_KEY=your_newrelic_license_key
APM_APP_NAME=AquaFarm Pro
APM_ENVIRONMENT=production

# Custom Metrics
CUSTOM_METRICS_ENABLED=true
CUSTOM_METRICS_PREFIX=aquafarm
CUSTOM_METRICS_TAGS=environment:production,service:api

# Log Aggregation
LOG_AGGREGATION_ENABLED=true
LOG_AGGREGATION_PROVIDER=elasticsearch
LOG_AGGREGATION_ENDPOINT=http://localhost:9200
LOG_AGGREGATION_INDEX=aquafarm-logs
LOG_AGGREGATION_BULK_SIZE=1000

# Monitoring Alerts
MONITORING_ALERTS_ENABLED=true
MONITORING_ALERT_RULES_FILE=./config/alert-rules.yaml
MONITORING_ALERT_EVALUATION_INTERVAL=60
MONITORING_ALERT_NOTIFICATION_CHANNELS=email,slack

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_DISCOVERY_PROVIDER=consul
SERVICE_DISCOVERY_ENDPOINT=http://localhost:8500
SERVICE_DISCOVERY_SERVICE_NAME=aquafarm-pro
SERVICE_DISCOVERY_HEALTH_CHECK_INTERVAL=30

# Load Balancing
LOAD_BALANCING_ENABLED=true
LOAD_BALANCING_ALGORITHM=round_robin
LOAD_BALANCING_HEALTH_CHECK_ENABLED=true
LOAD_BALANCING_HEALTH_CHECK_INTERVAL=30

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_WINDOW=900
RATE_LIMITING_MAX_REQUESTS=100
RATE_LIMITING_BURST=10

# Caching
CACHING_ENABLED=true
CACHING_TTL=3600
CACHING_MAX_SIZE=10000
CACHING_EVICTION_POLICY=LRU

# Database Monitoring
DB_MONITORING_ENABLED=true
DB_QUERY_LOGGING=false
DB_SLOW_QUERY_THRESHOLD=1000
DB_CONNECTION_MONITORING=true
DB_DEADLOCK_MONITORING=true

# Redis Monitoring
REDIS_MONITORING_ENABLED=true
REDIS_MEMORY_MONITORING=true
REDIS_KEY_EXPIRATION_MONITORING=true
REDIS_SLOW_LOG_MONITORING=true

# File System Monitoring
FILESYSTEM_MONITORING_ENABLED=true
FILESYSTEM_DISK_USAGE_THRESHOLD=90
FILESYSTEM_INODE_USAGE_THRESHOLD=90
FILESYSTEM_MONITORING_PATHS=/var/log,/tmp,/uploads

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
SECURITY_INTRUSION_DETECTION=true
SECURITY_MALWARE_SCANNING=true
SECURITY_VULNERABILITY_SCANNING=true
SECURITY_COMPLIANCE_SCANNING=true
