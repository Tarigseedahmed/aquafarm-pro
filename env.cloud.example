# Cloud Environment Variables for AquaFarm Pro

# Cloud Platform Configuration
CLOUD_PLATFORM=aws
CLOUD_REGION=us-west-2
CLUSTER_NAME=aquafarm-pro
NAMESPACE=aquafarm-pro

# Docker Registry Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your-username
DOCKER_IMAGE_TAG=latest

# GitHub Container Registry
GITHUB_TOKEN=your_github_token
GITHUB_USERNAME=your-username

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=your_aws_account_id

# Google Cloud Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=your_service_account_key
GCP_REGION=us-central1-a

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_RESOURCE_GROUP=aquafarm-pro
AZURE_REGION=eastus

# DigitalOcean Configuration
DO_ACCESS_TOKEN=your_digitalocean_token
DO_REGION=nyc1

# Database Configuration
DB_TYPE=postgres
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=aquafarm_prod
DB_USER=aquafarm_user
DB_PASSWORD=your_secure_database_password
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Redis Configuration
REDIS_URL=redis://redis-service:6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_1234567890
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_1234567890
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=https://aquafarm.cloud
API_KEY=your_api_key_here_1234567890

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=/app/uploads

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@aquafarm.cloud
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=false
SMTP_FROM=alerts@aquafarm.cloud

# Slack Configuration
SLACK_WEBHOOK=https://hooks.slack.com/services/xxx
SLACK_CHANNEL=#alerts
SLACK_USERNAME=AquaFarm Bot
SLACK_ICON_EMOJI=:warning:

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/aquafarm.crt
SSL_KEY_PATH=/etc/ssl/private/aquafarm.key

# Load Balancer Configuration
LOAD_BALANCER_TYPE=nginx
LOAD_BALANCER_IP=your_load_balancer_ip

# Domain Configuration
DOMAIN_NAME=aquafarm.cloud
API_DOMAIN=api.aquafarm.cloud
ADMIN_DOMAIN=admin.aquafarm.cloud
MONITORING_DOMAIN=monitoring.aquafarm.cloud

# DNS Configuration
DNS_PROVIDER=cloudflare
DNS_API_TOKEN=your_dns_api_token
DNS_ZONE_ID=your_dns_zone_id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BUCKET=aquafarm-backups
S3_REGION=us-west-2

# Auto Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# Resource Limits
BACKEND_CPU_REQUEST=250m
BACKEND_CPU_LIMIT=500m
BACKEND_MEMORY_REQUEST=512Mi
BACKEND_MEMORY_LIMIT=1Gi

FRONTEND_CPU_REQUEST=125m
FRONTEND_CPU_LIMIT=250m
FRONTEND_MEMORY_REQUEST=256Mi
FRONTEND_MEMORY_LIMIT=512Mi

POSTGRES_CPU_REQUEST=250m
POSTGRES_CPU_LIMIT=1000m
POSTGRES_MEMORY_REQUEST=512Mi
POSTGRES_MEMORY_LIMIT=2Gi

REDIS_CPU_REQUEST=125m
REDIS_CPU_LIMIT=500m
REDIS_MEMORY_REQUEST=256Mi
REDIS_MEMORY_LIMIT=512Mi

# Storage Configuration
POSTGRES_STORAGE_SIZE=50Gi
REDIS_STORAGE_SIZE=10Gi
UPLOADS_STORAGE_SIZE=20Gi
LOGS_STORAGE_SIZE=10Gi
BACKUP_STORAGE_SIZE=100Gi
PROMETHEUS_STORAGE_SIZE=50Gi
GRAFANA_STORAGE_SIZE=10Gi

# Network Configuration
INGRESS_CLASS=nginx
INGRESS_ANNOTATIONS=nginx.ingress.kubernetes.io/ssl-redirect:true

# Security Configuration
POD_SECURITY_POLICY_ENABLED=true
NETWORK_POLICY_ENABLED=true
RBAC_ENABLED=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTMANAGER_ENABLED=true

# Logging Configuration
LOG_AGGREGATION_ENABLED=true
LOG_AGGREGATION_PROVIDER=elasticsearch
LOG_AGGREGATION_ENDPOINT=http://elasticsearch:9200

# CI/CD Configuration
CI_CD_ENABLED=true
CI_CD_PROVIDER=github
CI_CD_REPOSITORY=your-username/aquafarm-pro
CI_CD_BRANCH=main

# Environment
NODE_ENV=production
PORT=3000
