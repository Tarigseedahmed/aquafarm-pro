# AquaFarm Backend - .env example (production-lite)

# Runtime
NODE_ENV=production
PORT=3000

# Auth
JWT_SECRET=CHANGE_ME_TO_A_STRONG_SECRET

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=aquapro
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_DB_PASSWORD

# Redis (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=https://aquafarm.cloud

# Observability
SERVICE_NAME=aquafarm-backend
DEFAULT_TENANT_CODE=default
DEFAULT_TENANT_NAME=Default Tenant
TENANT_STRICT=false


