{
  "__inputs": [],
  "__requires": [],
  "title": "AquaFarm Backend Observability",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (RPS)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total[1m]))", "legendFormat": "all" },
        { "expr": "sum by (status) (rate(http_requests_total[1m]))", "legendFormat": "{{status}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p50/p90/p99 (s)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p50" },
        { "expr": "histogram_quantile(0.9, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p90" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p99" }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Errors by Route",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (route) (rate(http_5xx_errors_total[5m]))", "legendFormat": "{{route}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Rate Limit Hits",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (route) (rate(rate_limit_exceeded_total[5m]))", "legendFormat": "{{route}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Forbidden (403) by Reason",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (reason) (rate(forbidden_requests_total[5m]))", "legendFormat": "{{reason}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active SSE Connections",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        { "expr": "active_sse_connections", "legendFormat": "active" }
      ]
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "templating": { "list": [] },
  "schemaVersion": 38,
  "version": 1
}


